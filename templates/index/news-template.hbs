<h1 class="text-black-10">News</h1>
<div class="row py-3">
    {{#each data}}
    <div class="col-lg-4">
        <div class="float-start me-3">
            <div class="date text-white text-center rounded-4 py-1">
                <h4>{{date}}</h4>
            </div>
            <a class="readmore btn btn-link" href="?request=news/{{id}}">Read more</a>
        </div>
        <div>
            <h3>{{name}}</h3>
            <p class="text-justify text-black-50 me-4">{{summary}}</p>
        </div>
    </div>
    {{/each}}
</div>