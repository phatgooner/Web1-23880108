<div class="row text-center py-5">
    {{#each data}}
    <div class="col-lg-3 col-md-6 col-sm-12">
        <img src="{{imagepath}}" alt="{{name}}" onmouseover="setActiveImgPath(this,'{{imagepath}}')"
            onmouseout="setActiveImgPath(this,'{{imagepath}}', false)"
            onclick="location.assign('?request=products/{{id}}')">
        <h3>{{name}}</h3>
        <p class="text-black-50">{{summary}}</summary>
        </p>
        <a class="readmore btn btn-link pt-0" href="?request=products/{{id}}">Read more</a>
    </div>
    {{/each}}
</div>